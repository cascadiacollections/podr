    "version": "0.2.0",
    "configurations": [
        {
            "name": "ğŸš€ Launch Podr (Development)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/.bin/heft",
            "args": ["start"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "presentation": {
                "hidden": false,
                "group": "ğŸš€ Development",
                "order": 1
            }
        },
        {
            "name": "ğŸ”§ Build Podr (Production)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/.bin/heft",
            "args": ["build", "--clean", "--production"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "env": {
                "NODE_ENV": "production"
            },
            "presentation": {
                "hidden": false,
                "group": "ğŸ”§ Build",
                "order": 1
            }
        },
        {
            "name": "ğŸ§ª Run Tests (Watch Mode)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--watch", "--coverage"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "env": {
                "NODE_ENV": "test"
            },
            "presentation": {
                "hidden": false,
                "group": "ğŸ§ª Testing",
                "order": 1
            }
        },
        {
            "name": "ğŸ§ª Run Single Test File",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["${relativeFile}"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "env": {
                "NODE_ENV": "test"
            },
            "presentation": {
                "hidden": false,
                "group": "ğŸ§ª Testing",
                "order": 2
            }
        },
        {
            "name": "ğŸŒ Debug Chrome (Attach)",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true,
            "urlFilter": "http://localhost:9000/*",
            "presentation": {
                "hidden": false,
                "group": "ğŸŒ Browser",
                "order": 1
            }
        },
        {
            "name": "ğŸŒ Launch Chrome (Debug)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:9000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
            "runtimeArgs": [
                "--disable-web-security",
                "--disable-features=VizDisplayCompositor"
            ],
            "presentation": {
                "hidden": false,
                "group": "ğŸŒ Browser",
                "order": 2
            }
        },
        {
            "name": "ğŸ” Debug Current TypeScript File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js",
                "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "sourceMaps": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "presentation": {
                "hidden": false,
                "group": "ğŸ” File Debug",
                "order": 1
            }
        }
    ],
    "compounds": [
        {
            "name": "ğŸš€ğŸŒ Launch Development + Chrome Debug",
            "configurations": [
                "ğŸš€ Launch Podr (Development)",
                "ğŸŒ Launch Chrome (Debug)"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "ğŸ”„ Compound",
                "order": 1
            }
        }
    ]
}